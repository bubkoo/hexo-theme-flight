<% if (site.posts.length){ %>
<div class="widget tag">
  <h3 class="title"><%= __('recent_posts') %></h3>
  <ul class="entry">
    <% site.posts.sort('date', -1).limit(theme.recent_posts_count).each(function(post){ %>
      <li>
        <a href="<%= config.root %><%= post.path %>"><%= post.title %></a>
      </li>
    <% }); %>
  </ul>
</div>
<% } %>