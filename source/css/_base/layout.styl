*
  margin 0
  padding 0

body
  background url('/images/bg.jpg') fixed repeat center top color-background
  color color-font
  font-family font-default
  font-size 14px
  line-height 1.75em
  text-shadow 0 0 1px transparent
  ::selection
    color #FFFFFF
    background #E84893
    text-shadow none
  ::-moz-selection
    color #FFFFFF
    background #E84893
    text-shadow none
  @media screen and (max-width: 1260px)
    margin 0 30px
  @media screen and (max-width: 600px)
    font-size 13px

h1, h2, h3, h4, h5, h6
  font-family font-title

h1
  font-size 1.8em

h2
  font-size 1.5em

h3
  font-size 1.3em

a
  text-decoration none
  color color-link
  &:hover
    text-decoration underline

.alignleft
  float left

.alignright
  float right

.clearfix
  clearfix()

.inner
  width page-width
  margin 0 auto
  @media screen and (max-width: 1260px)
    width 100%

img#go2top
  margin-left 610px
  @media screen and (max-width: 1260px)
    bottom 10px
    right 2px
    left auto
    width 26px

#main-col
  width 660px
  @media screen and (max-width: 1260px)
    width 100%
    margin-right -300px
  @media screen and (max-width: 900px)
    margin-right 0
    float none

#wrapper
  @media screen and (max-width: 1260px)
    margin-right 300px
  @media screen and (max-width: 900px)
    margin-right 0