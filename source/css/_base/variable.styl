// Color
color-background = #f0f0f0
color-font = #666
color-meta = #999
color-border = #ddd
color-link = #1ba1e2

// Font
font-default = "Microsoft YaHei", tahoma, sans-serif
font-serif = "Georgia", serif
font-mono = Monaco, Consolas, "Lucida Console", monospace
font-title = "Microsoft YaHei", tahoma, sans-serif

