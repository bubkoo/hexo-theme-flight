icon-size = 32px
icon-gap = 25px

article
  box-shadow 1px 2px 3px color-border
  border-top 2px solid color-link

  table
    border-collapse collapse
  td,
  th
    border 1px solid #999
    padding 0.5rem
    text-align left

  tbody tr:nth-of-type(odd)
    background inherit


  &.page
    padding-left 0
    .icon
      display none
    header
      .title
        padding 0
  &.post
    .icon
      &:before
        content '\f016'

  &.photo
    .icon
      &:before
        content '\f030'

  &.link
    .icon
      &:before
        content '\f0c1'

    .title
      a
        &:after
          content '\f08e'
          color color-meta
          font 12px font-icon
          padding-left 10px
          vertical-align super

  .post-content, .post-comment
    background #fff
    padding 20px 30px 15px 30px
    margin-bottom 50px
    position relative

  .gallery
    margin 30px -30px
    overflow hidden
    position relative
    &:hover
      .control
        opacity 1
      img
        transform scale(1.1, 1.1)
        transition all 0.8s
        @media screen and (max-width:580px)
          transform none
          transition none

    img
      min-width 100%
      max-width 100%
      height auto
      position absolute
      top 0
      left 0
      opacity 0
      transition all 0.8s

    .control
      opacity 0
      transition 0.3s

    .prev, .next
      position absolute
      top 0
      width 50%
      height 100%
      cursor pointer
      &:before
        position absolute
        font 24px/1 font-icon
        text-align center
        width 24px
        text-shadow 0 0 15px rgba(0,0,0,0.5)
        color #fff
        margin-top -12px
        top 50%

    .prev
      left 0
      &:before
        content '\f053'
        left 10px

    .next
      right 0
      &:before
        content '\f054'
        right 10px

  header
    .icon
      width icon-size
      height icon-size
      margin-right icon-gap
      position absolute
      top 20px
      left 26px
      color color-link
      @media screen and (max-width: 600px)
        display none
      &:before
        position absolute
        font 32px font-icon
        top 0
        left 0
        width 32px
        text-align center

    .icon-black
      color #333

    time
      position absolute
      top 10px
      right 24px
      text-align right
      font-style italic
      font-family font-serif
      width 80px
      text-align center

      span
        display block
      .day
        margin 0 0 5px 0
        font-size 36px
        color color-link
      .month
        font-size .8em
        color color-meta

    .title
      font-weight normal
      line-height 28px
      padding 0 80px 0 32px
      @media screen and (max-width: 600px)
        padding 0 50px 0 0
        font-size 1.5em
      a
        color color-link
        &:hover
          color color-link
          text-decoration none

  .entry
    text-align justify
    line-height 1.6
    word-break break-all
    word-wrap break-word
    p, blockquote, ul, ol, dl, table, iframe, h3, h4, h5, h6, .video-container
      margin-top 15px
    h4
      font-size 1.2em
    .sign
    .j-sign
       text-align right
       font-style italic
       margin-top 5px
    .dot
    .j-dot
      border 1px dashed #ccc
      padding  10px
      font-size  0.8em
      background #EEF3F6
    .j-quote
      border 1px dashed #eee
      background #f9f9f9
      padding 10px
    .j-warning
      background #fff0c0
      border 1px solid #ffe38d
      padding 14px
    .j-info
      background #c7eefe
      border 1px solid #ade6fe
      padding 14px
    blockquote
      font-family "Georgia", tahoma, sans-serif
      font-size 1.1em
      padding 0 30px 15px
      background #f9f9f9
      border-left 10px solid #1ba1e2
      margin 1.5em 10px
      padding 0.5em 10px
      quotes "\201C" "\201D" "\2018" "\2019"
      &:before
        color color-link
        content open-quote
        font-size 4em
        line-height 0.1em
        margin-right 0.25em
        vertical-align -0.4em
      p
        margin-top -1.25em
        margin-left 2em
      footer
        border-top none
        font-size 0.8em
        line-height 1
        margin 20px 0 0
        padding-top 0
        cite
          &:before
            content 'â€”'
            color #ccc
            padding 0 0.5em

    ul, ol, dl
      margin-left 20px
      ul, ol, dl
        margin-top 0

    h1, h2
      font-weight 600
      border-bottom 1px solid color-border
      padding-bottom 10px
      margin-top 20px

    h3, h4, h5, h6
      font-weight 600

    img, video
      max-width 100%
      height auto
      border none

    iframe
      border none

    .fancybox
      img
        border 1px solid #ddd
        padding 10px
        border-radius 5px
        box-shadow 1px 1px 4px rgba(150,150,150,.3)
        &:hover
          box-shadow 1px 1px 4px rgba(150,150,150,.5)
    .caption
      display block
      margin-top 5px
      color color-meta
      position relative
      font-size 0.9em
      padding-left 25px
      &:before
        content '\f040'
        position absolute
        font 1.3em font-icon
        position absolute
        left 0
        top 3px

    .video-container
      position relative
      padding-bottom 56.25%
      padding-top 30px
      height 0
      overflow hidden
      iframe, object, embed
        position absolute
        top 0
        left 0
        width 100%
        height 100%
        margin-top 0

    .pullquote
      float right
      border none
      padding 0
      margin 1em 0 0.5em 1.5em
      text-align left
      width 45%
      font-size 1.5em

  footer
    clearfix()

  footer
    margin-top 15px
    padding-top 10px
    border-top 1px solid color-border
    color color-meta
    font-size 0.9em
    line-height 16px
    position relative
    min-height 16px
    a
      color color-meta
      &:hover
        color color-link
        text-decoration none
      &:before
        font 1.1em font-icon
        padding-right 10px
        vertical-align middle

      &.more-link
        &:before
          content '\f054'

      &.comment-link
        &:before
          content '\f075'

    .categories, .tags
      position relative
      padding-left 25px
      margin 5px 0
      &:before
        position absolute
        font 1.1em font-icon
      a
        color color-link
        &:hover
          text-decoration none

    .categories
      &:before
        content '\f07b'
        top 2px
        left 1px

    .tags
      &:before
        content '\f02c'
        top 3px
        left 2px

    .categories,.tags
      a
        margin-right 8px
        color color-meta
        &:hover
          color color-font

    .addthis
      margin-top 15px
      iframe
        margin-top 0

@keyframes glow {
    0% {
        box-shadow: 0 0 12px rgba(27, 161, 226, 0.5);
        border-color: rgba(27, 161, 226, 0.5);
    }
    100% {
        box-shadow: 0 0 12px rgba(27, 161, 226, 1.0), 0 0 18px rgba(27, 161, 226, 1.0);
        border-color: rgba(27, 161, 226, 1.0);
    }
}

#article-nav
  clearfix()
  position relative
  margin -30px 0 20px 0

  &:before
    width: 8px;
    height: 8px;
    position: absolute;
    top: 50%;
    left: 50%;
    margin-top: -4px;
    margin-left: -4px;
    content: ""
    border-radius: 50%
    background-color: color-link
    box-shadow: 0 0 12px rgba(27, 161, 226, 1.0), 0 0 18px rgba(27, 161, 226, 1.0);
    animation-name: glow
    animation-duration: 1s
    animation-iteration-count: infinite
    animation-direction: alternate
    animation-timing-function: ease-in-out

  .article-nav-link-wrap
    text-decoration: none
    color: color-meta
    box-sizing: border-box
    width: 50%;
    text-align: center
    display: block
    &:hover
      color: color-font
      .article-nav-title
        color: color-link

    .article-nav-caption
      text-shadow: 0 1px color-border
      text-transform: uppercase
      letter-spacing: 2px
      line-height: 1em
      font-weight: bold
      .article-nav-newer &
        margin-right: -2px

    .article-nav-title
      color: color-font
      font-size: 0.85em
      line-height: 1.6em;
      margin-top: 0.5em

  .article-nav-newer
      float: left
      text-align: right
      padding-right: 20px

  .article-nav-older
      float: right
      text-align: left
      padding-left: 20px

#go2top
  padding 0
  margin 0
  width 35px
  height auto
  position fixed
  left 50%
  bottom 100px
  cursor pointer
  z-index 99999999
  opacity 0.5
  display none
  transition 0.45s

  &:hover
    opacity 1

.btn
  background #368ee0
  color #fff
  display inline-block
  padding 5px 9px
  margin-bottom 0
  font-size 12px
  line-height 20px
  text-align center
  vertical-align middle
  cursor pointer
  &:hover
  &:focus
    background #1e74c5
    text-decoration none
    transition background-position .1s linear