#sidebar
  width 270px
  line-height 1.8em
  @media screen and (max-width: 900px)
    float none
    width 100%
  .widget
    background #fff
    box-shadow 1px 2px 3px #ddd
    margin-bottom 30px
    word-wrap break-word
    .title
      padding 15px 20px
      font-size 1.5em
      border-bottom 1px solid color-border
      font-weight normal

    .entry
      font-size 0.9em
      padding 15px 20px

    ul, ol, dl
      list-style none
      ul, ol, dl
        list-style disc
        margin-left 20px

  .search
    margin-bottom 30px
    input
      background #fff
      font-family font-title
      font-style italic
      font-size 1em
      padding 10px 15px
      border 1px solid color-border
      width 100%
      box-sizing border-box
      color color-meta
      transition all 0.2s ease-out
      &:focus
        color color-font
        border-color rgb(102, 175, 233)
        outline 0 none
        box-shadow 0px 1px 1px rgba(0, 0, 0, 0.075) inset, 0px 0px 8px rgba(102, 175, 233, 0.6)

  .tag
    small
      margin-left 15px
      color color-meta
      &:before
        content '('
      &:after
        content ')'

  .twitter
    li
      border-bottom 1px solid color-border
      padding 15px 20px
      font-size 0.9em
      &:last-of-type
        border-bottom none
    small
      display block
      margin-top 10px
      color color-meta
      line-height 1

  .tagcloud
    .entry
      padding-right 5px
    a
      margin-right 10px
      display inline-block

  .recent_comments
    .ds-recent-comments
      li:first-child
        padding-top 0 !important
        border-top none !important

.topic-list
  width 270px
  line-height 1.8em
  background #fff;
  box-shadow: 1px 2px 3px #ddd;
  word-wrap: break-word;
  transition: opacity 5s ease-in-out;
  opacity: .3;
  @media screen and (max-width: 900px)
    display none
  &:hover
    transition: opacity .5s ease-out;
    opacity: .7;
  .title
    padding 15px 20px
    font-size 1.5em
    border-bottom 1px solid color-border
    font-weight normal

.topic-tree
  padding 12px 0 12px 0
  ul
    list-style none
    padding-left 17px
    li
      list-style none
      line-height 1.5em
      a
        color #333
        font-size 12px
        display block
        padding-left 10px
        &:hover
          color color-link
          text-decoration none
        i
          font-style normal
          float left
        span
          display block
          padding-left 6px
          padding-right 12px
          overflow hidden // bfc
    li.active
      a, a:hover
        color color-link
        text-decoration none

